{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "jsxImportSource": "@emotion/react",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ]
}